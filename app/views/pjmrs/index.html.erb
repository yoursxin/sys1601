<h1>票据买入列表</h1>

<%=form_tag delete_multiple_pjmrs_path, :method => :delete do %>

<%= will_paginate %>

<table class='table table-striped table-bordered table-hover table-condensed'>
	<thead>
	<tr>
			<th>&nbsp;</th>
			<th>票号</th>
			<th>贴现类型</th>
			<th>票据类型</th>
			<th>批次号</th>
			<th>票面金额</th>
			<th>转入日期</th>
			<th>出票日期</th>
			<th>票面到期日</th>
			<th>节假日加天</th>
		</tr>
	</thead>
	<% @pjmrs.each do |pjmr|%>
		<tr>
			<td><%=check_box_tag "pjmr_ids[]", pjmr.id%></td>
			<td><%=pjmr.ph%></td>
			<td><%=pjmr.txlx%></td>
			<td><%=pjmr.pjlx%></td>
			<td><%=pjmr.pch%></td>
			<td><%=pjmr.pmje%></td>
			<td><%=pjmr.zrrq%></td>
			<td><%=pjmr.cprq%></td>
			<td><%=pjmr.pmdqrq%></td>
			<td><%=pjmr.jjrjt%></td>
		</tr>
	<% end %>
</table>
<%= will_paginate %>
<%= submit_tag "删除"%>
<% end %>

<%=form_tag import_pjmrs_path, multipart: true do%>
  <%=file_field_tag :file%>
  <%=submit_tag "导入"%>
<% end%>
