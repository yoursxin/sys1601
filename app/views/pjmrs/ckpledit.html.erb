<h4>票据卖出信息录入</h4>

<div class="control-group">

<%= form_for :pjmc, :url => ckplsq_pjmrs_path, :html => {:method => :put} do |f| %>

	<div class="controls">
	  <%=f.label :pch,"卖出批次号　：", class: "control-label" %>	  
	  <%=f.text_field  :pch %>
	</div>
	<div class="controls">
	  <%=f.label :khmc,"转出贴现客户：", class: "control-label" %>
	  <%=f.text_field  :khmc %>
	</div>
	<div class="controls">
	  <%=f.label :zmrq,"转卖日期　　：", class: "control-label" %>
	  <%=f.date_field  :zmrq %>
	</div>
	<div class="controls">
	  <%=f.label :txlx,"转卖类型　　：", class: "control-label" %>
	  <%=f.text_field  :txlx %>
	</div>
	<div class="controls">
	  <%=f.label :jjrjt,"节假日加天　：", class: "control-label" %>
	  <%=f.number_field  :jjrjt %>
	</div>
	<div class="controls">
	  <%=f.label :ydjt,"异地加天　　：" , class: "control-label"%>
	  <%=f.number_field  :ydjt %>
	</div>
	<div class="controls">
	  <%=f.label :jxts,"计息天数　　：", class: "control-label" %>
	  <%=f.number_field  :jxts %>
	</div>
	<div class="controls">
	  <%=f.label :jxdqrq,"计息到期日　：" , class: "control-label"%>
	  <%=f.date_field  :jxdqrq %>
	</div>
	<div class="controls">
	  <%=f.label :zcll,"转出利率　　：" , class: "control-label"%>
	  <%=f.number_field  :zcll , :step => "any"%>
	</div>
	<div class="controls">
	  <%=f.label :zclx,"转出利息　　：" , class: "control-label"%>
	  <%=f.number_field  :zclx , :step => "0.01"%>
	</div>
	<div class="controls">
	  <%=f.label :ssje,"实收金额　　：" , class: "control-label"%>
	  <%=f.number_field  :ssje , :step => "0.01"%>
	</div>
	<div class="controls">
	  <%=f.label :khjlmc,"转卖客户经理：" , class: "control-label"%>
	  <%=f.text_field  :khjlmc %>
	</div>
	<div class="controls">
	  <%=f.label :dabh,"转卖档案编号：" , class: "control-label"%>
	  <%=f.text_field  :dabh %>
	</div>
	
	<%=f.submit "提交",  class: "btn  btn-default"%>
	<%=f.submit "下载",  class: "btn  btn-default"%>
<% end %>
</div>
<hr>
<h4>已选择票据清单</h4>
<%=render partial: 'pjmrSimpleList', object: @pjmrs %>