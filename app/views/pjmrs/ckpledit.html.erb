<h4>票据卖出信息</h4>

<%= form_for :pjmc, :url => ckplsq_pjmrs_path, :html => {:method => :put} do |f| %>

	<% @pjmrs.each do |pjmr| %>
		<%=hidden_field_tag "pjmr_ids[]", pjmr.id %>
	<% end %>
	<div class="form-group">
	  <%=f.label :pch,"批次号" %><br/>
	  <%=f.text_field  :pch, class: "form-control" %>
	</div>
	<div class="form-group">
	  <%=f.label :khmc,"客户名称" %><br/>
	  <%=f.text_field  :khmc, class: "form-control" %>
	</div>
	
	<%=f.submit "提交",  class: "btn  btn-default"%>


<% end %>