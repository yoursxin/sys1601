<script type="text/javascript">
	$(function(){
		$('#allcheckbox').change(function(){
			if($('#allcheckbox').prop('checked')){
				$('.ckzjtz').prop('checked',true);
			}else{
				$('.ckzjtz').prop('checked',false);
			}			
		});
	});	
</script>
<table class='table table-striped table-bordered table-hover table-condensed' style='width:2100px'>
	<thead>
	<tr>
			<th><input type='checkbox' id='allcheckbox'/></th>
			<th>资金编号</th>
			<th>状态</th>
			<th>客户名称</th>
			<th>产品描述</th>
			<th>金额</th>
			<th>币种</th>	
			<th>起息日</th>
			<th>到期日</th>
			<th>利率</th>
			<th>计息天数</th>
			<th>利息</th>
			<th>本息合计金额</th>
			<th>客户经理</th>
			<th>备注</th>
			<th>档案编号</th>
			<th>结清编号</th>
			<th>实际起息日</th>
			<th>实际到期日</th>
			<th>实际利率</th>
			<th>实际天数</th>
			<th>实际利息</th>
			<th>实际本息合计金额</th>			
		</tr>
	</thead>
	<% @zjtzs.each do |zjtz|%>
		<tr>
			<td><%=check_box_tag "zjtz_ids[]", zjtz.id, false, class: 'ckzjtz'%></td>
			<td><%=zjtz.bh%></td>
			<td><%=get_zjztdesc(zjtz.zt)%></td>
			<td><%=zjtz.khmc%></td>
			<td><%=zjtz.cpms%></td>			
			<td><%=number_to_currency(zjtz.je, unit: '')%></td>
			<td><%=zjtz.biz%></td>
			<td><%=zjtz.csqxrq%></td>
			<td><%=zjtz.csdqrq%></td>
			<td><%=zjtz.csll%></td>
			<td><%=zjtz.csjxts%></td>
			<td><%=number_to_currency(zjtz.cslx, unit: '')%></td>
			<td><%=number_to_currency(zjtz.je + zjtz.cslx, unit: '')%></td>
			<td><%=zjtz.khjlmc%></td>
			<td><%=zjtz.bz%></td>
			<td><%=zjtz.dabh%></td>
			<td><%=zjtz.jqbh%></td>
			<td><%=zjtz.qxrq%></td>
			<td><%=zjtz.dqrq%></td>
			<td><%=zjtz.ll%></td>
			<td><%=zjtz.jxts%></td>
			<td><%=number_to_currency(zjtz.lx, unit: '')%></td>
			<td><%=number_to_currency(zjtz.je+zjtz.lx, unit: '')%></td>

			
		</tr>
	<% end %>
</table>